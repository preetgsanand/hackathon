<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/jobIcon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/jobIcon"
            android:layout_alignTop="@+id/jobIcon"
            android:layout_marginTop="5dp"
            android:text="Carpenting"
            android:id="@+id/jobTitle"
            android:textColor="#000000"
            android:textSize="17sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toEndOf="@+id/jobIcon"
                android:layout_below="@+id/jobTitle"
                android:layout_marginTop="5dp"
                android:id="@+id/jobDescription"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#78909C"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobStatus"
                android:layout_below="@+id/jobDescription"
                android:layout_toEndOf="@+id/jobIcon"
                android:text="Abandoned"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/jobAdded"
                android:text="20/03/2017"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#78909C"
                android:layout_alignTop="@+id/jobStatus"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
</RelativeLayout>